@model IEnumerable<MALL.Models.brand>

@{
    ViewBag.Title = "Index"; Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<img style="height:2px;width:100%" src="../images/l.jpg" alt="First slide">


<h2 class="text-primary" style="text-align:center">
    All brands
</h2>

<img style="height:2px;width:100%" src="../images/l.jpg" alt="First slide">

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover">
    <thead>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name_brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description_brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image_brand)
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tbody>

            <tr>
                <td>
                    <img style="height:80px;width:100px" src="@Html.DisplayFor(modelItem =>  item.Image_brand)">

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name_brand)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description_brand)

                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id_brand }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id_brand }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id_brand })
                </td>
            </tr>
        </tbody>
    }

</table>
