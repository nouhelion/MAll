<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 col-sm-6">
                <div class="product-grid">
                    <div class="product-image">
                        <a href="#">
                            <img class="pic-1" src="@Html.DisplayFor(modelItem => item.ProductImage)">
                        </a>
                        <ul class="social">
                            <li><a href="" data-tip="More pics"><i class="fa fa-chevron-left"></i></a></li>
                            <li><a href="" data-tip="Quick View"><i class="fa fa-search"></i></a></li>
                            <li><a href="" data-tip="More pics"><i class="fa fa-chevron-right"></i></a></li>
                        </ul>
                        <span class="product-new-label">Sale</span>
                        <span class="product-discount-label">20%</span>
                    </div>
                    <ul class="rating">
                        <li class="fa fa-star"></li>
                        <li class="fa fa-star"></li>
                        <li class="fa fa-star"></li>
                        <li class="fa fa-star"></li>
                        <li class="fa fa-star disable"></li>
                    </ul>

                    <div class="product-content">
                        <h3 class="title"><a href="#"> @Html.DisplayFor(modelItem => item.ProductName)</a></h3>
                        <div class="price">
                            @Html.DisplayFor(modelItem => item.Price) DH

                            <span>400 DH</span>
                        </div>

                        <a class="add-to-cart" href="">
                            @Html.DisplayFor(modelItem => item.ProductBrand)
                        </a>
                        <a class="add-to-cart" href="">
                            @Html.DisplayFor(modelItem => item.CategoryName)
                        </a>
                    </div>
                </div>
            </div>}

    </div>
</div>
