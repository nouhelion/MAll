@{
    if (Session["RegId"] == null)
    {
        Response.Redirect("~/User/Login");
    }



}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mon application ASP.NET</title>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>

    <link href="~/Content/bootstrap (1).css" rel="stylesheet" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>



    <nav class="navbar navbar-expand-md navbar-dark bg-primary fixed-top navbar-fixed-top  static-top">
        <div class="container-fluid ">
            <a class="navbar-brand" href="~/Home/Index">SLEK</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse " id="collapsibleNavbar">
                <ul class="navbar-nav ">
                    <li class="nav-item">
                        <a class="nav-link active" href="~/Home/Index">
                            Accueil
                            <span class="visually-hidden">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="~/Home/About">Fashion</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Home/Contact">Beauty</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Home/restaurant">Restaurants</a>
                    </li>



                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="~/Home/brand" id="navbardrop" data-toggle="dropdown">
                            Brands
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="~/Home/brand"> Pull&Bear </a>
                            <a class="dropdown-item" href="~/Home/brand"> Kiabi </a>
                            <a class="dropdown-item" href="~/Home/brand"> Defacto </a>
                            <a class="dropdown-item" href="~/Home/brand">Lefties</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="~/Home/brand">Flormar</a>
                            <a class="dropdown-item" href="~/Home/brand">Diamantine</a>
                            <a class="dropdown-item" href="~/Home/brand">Yan&One</a>
                        </div>
                    </li>

                </ul>


                <ul class="navbar-nav   " style=" padding-left:55em ">

                    <li class="nav-item ">

                        <a class="nav-link" href="~/Reservations/Create" data-bs-target="#myModal" data-bs-toggle="modal">  Book a day </a>
                    </li>
                    <li class="nav-item ">

                        <a class="nav-link" href="~/comment/Create" data-bs-target="#myModal" data-bs-toggle="modal"> Comment </a>
                    </li>
                    <li class="nav-item ">

                        <a class="nav-link" href="~/User/Login" data-bs-target="#myModal" data-bs-toggle="modal">  Welcome @Session["UserName"].ToString() </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="~/User/LogOut" data-bs-target="#myModal" data-bs-toggle="modal">Logout</a>
                    </li>
                </ul>

            </div>
        </div>
    </nav>




    <div class="container body-content">
        @RenderBody()
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </div>
    <br />
    <br />
    <br />


        <div class="navbar navbar-default navbar-fixed-bottom">
            <div class="container">
                <p class="navbar-text pull-left">
                    &copy; @DateTime.Now.Year - MALL SLEK. All right reserved.
                    <a href="#" target="_blank"><i class="fa fa-facebook-square"></i></a>
                    <a href="#"><i class="fa fa-twitter"></i></a>
                    <a href="#"><i class="fa fa-google-plus"></i></a>
                </p>

                <a href="http://youtube.com" class="navbar-btn btn pull-right">
                    <span class="glyphicon glyphicon-star"></span>  Subscribe on YouTube
                </a>
            </div>


        </div>


</body>
</html>