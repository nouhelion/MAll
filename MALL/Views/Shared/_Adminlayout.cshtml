 @{ if (Session["RegId"] == null)
     {
         Response.Redirect("~/User/Login");
     }

}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mon application ASP.NET</title>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>

    <link href="~/Content/bootstrap (1).css" rel="stylesheet" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>



    <nav class="navbar navbar-expand-md navbar-dark bg-primary fixed-top  static-top">
        <div class="container-fluid ">
            <a class="navbar-brand" href="~/Home/Index">Dashbord</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse w-100 order-1 order-md-0   " id="collapsibleNavbar">
                <ul class="navbar-nav">

                    <li class="nav-item order-0">
                        <a class="nav-link " href="~/Products/Index">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Users/Index">Users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Reservations/Index">Reservations</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Brands/Index">Brands</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Restaurents/Index">Restaurents</a>
                    </li>                    <li class="nav-item">
                        <a class="nav-link" href="~/comment/Index">Comments</a>
                    </li>



                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="~/Products/Index" id="navbardrop" data-toggle="dropdown">
                            Add items
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="~/Products/Create"> Add Product </a>
                            <a class="dropdown-item" href="~/Products/Index"> Update Product </a>
                            <a class="dropdown-item" href="~/Brands/Create">Add Brand </a>
                            <a class="dropdown-item" href="~/Restaurents/Create">Add restaurant</a>
                        </div>
                    </li>

                </ul>

                <ul class="navbar-nav ms-auto">

                    <li class="nav-item ">

                        <a class="nav-link" href="~/User/Account" data-bs-target="#myModal" data-bs-toggle="modal">  Welcome Admin @Session["UserName"].ToString() </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="~/User/LogOut" data-bs-target="#myModal" data-bs-toggle="modal">Logout</a>
                    </li>
                </ul>








            </div>
        </div>
    </nav>




    <div class="container body-content">
        @RenderBody()
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </div>


    <div class="navbar navbar-default navbar-fixed-bottom ">
        <div class="container">
            <p class="navbar-text pull-left">
                &copy; @DateTime.Now.Year - MALL SLEK. All right reserved.
                <a href="#" target="_blank"><i class="fa fa-facebook-square"></i></a>
                <a href="#"><i class="fa fa-twitter"></i></a>
                <a href="#"><i class="fa fa-google-plus"></i></a>
            </p>

            <a href="http://youtube.com" class="navbar-btn btn pull-right">
                <span class="glyphicon glyphicon-star"></span>  Subscribe on YouTube
            </a>
        </div>


    </div>


</body>
</html>
